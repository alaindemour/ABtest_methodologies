{%- extends 'slides/index.html.j2' -%}

{%- block header -%}
{{ super() }}
<style>
/* Fix bottom margin cutoff in Reveal.js slides */
.reveal .slides section {
    padding-bottom: 1.5em !important;
}
.reveal .slides {
    margin-bottom: 30px !important;
}
/* Ensure controls and progress bar don't overlap content */
.reveal .controls {
    bottom: 14px !important;
}
.reveal .progress {
    height: 4px !important;
}
</style>
{%- endblock header -%}

{%- block body_footer -%}
{{ super() }}
<script>
// Override Reveal.js config for better content fit
Reveal.configure({
    margin: 0.1,
    height: 650,
    minScale: 0.2,
    maxScale: 1.5
});
</script>
{%- endblock body_footer -%}
